# Environment variables for Trinity First application

# Firebase Configuration - used by frontend
REACT_APP_FIREBASE_API_KEY=your-api-key-here
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id
REACT_APP_FIREBASE_MEASUREMENT_ID=your-measurement-id

# API Configuration
REACT_APP_API_URL=http://127.0.0.1:5002

# Backend Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro-latest
# Store this file securely outside of the repository or in a secure secrets manager
FIREBASE_CREDENTIALS_PATH=/path/to/your-service-account-key.json
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Configuration
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=true
SESSION_SECRET=your-secure-session-secret-here-at-least-32-chars